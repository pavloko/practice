<section>
  <h1><%= pluralize(@events.size, 'Event') %></h1>
  <ol>
    <% @events.each do |event| %>
      <li>
        <p>
          <strong><%= link_to(event.name, "events/#{event.id}") %></strong> in <%= event.location %>. Price: <%= format_price(event.price) %>
       </p>
       <p>
        <strong>When:</strong> <%= event.starts_at =%>
       </p>
        <p><%= truncate(event.description, length: 35, separator: ' ') %></p>
      </li>
    <% end %>
  </ol>
</section>
